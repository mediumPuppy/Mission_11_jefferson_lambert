<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mission_11_jefferson_lambert</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mission_11_jefferson_lambert.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand m-lg-2">A site for books</span>
    </div>

    @if (ViewData["Title"] as string == "Home Page")
    {
        <div class="row m-1 p-1">
            <div class="col-3">
                <select id="pageMin">
                    <option selected>Filter Here</option>
                    <option value="200">200+ Pages</option>
                    <option value="450"> 450+ Pages</option>
                    <option value="700">700+ Pages</option>
                </select>
            </div>
        </div>
    }


    <div class="container col-9">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
